<?xml version="1.0" ?>
<openerp>
<data>
    <!-- INHERIT VIEW: -->  
    <!-- sale.order --> 
    <record model="ir.ui.view" id="view_order_form_extra_fields">
        <field name="name">sale.order.extra</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
           <xpath expr="/form/sheet/notebook" position="before">
              <group name="extra_parameters" colspan="4" col="4"> 
                  <field name="quotation_model" />              
              </group>    
           </xpath>

           <!-- TODO: remove: <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='sequence']" position="after">
              <field name='repeat_header_line' />
           </xpath>
           -->
           <!--TODO: remove: <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/form/notebook/page[@string='Order Line']/field[@name='layout_type']" position="after">
              <field name='repeat_header_line' />
           </xpath>
           
           <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/form/notebook/page[@string='Order Line']/field[@name='sequence']" position="after">
              <field name='insert_photo' />                  
              <field name='use_amazon_description' />
              <field name='show_notes' />
           </xpath>-->
        </field>
    </record>

    <record model="ir.ui.view" id="view_order_line_tree_extra_fields">
        <field name="name">sale.order.line.extra</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree" />
        <field name="arch" type="xml">
           <field name="name" position="attributes">
               <attribute name="invisible">1</attribute>
           </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_product_product_extra_fields">
        <field name="name">product.product.extra</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
           <xpath expr="/form/sheet/notebook/page[@string='Sales']/group[@name='sale']" position="after">
                  <group colspan="4" col="8">
                      <field name="telaio" />              
                      <field name="pipe_diameter" />              
                      <field name="weight_packaging" />              
                      <newline />
                      <field name="item_per_box" />              
                      <field name="item_per_pallet" />              
                      <field name="item_per_mq" />              
                      <field name="item_per_camion" />              
                      <separator string="Descrizione extra" colspan="8" />
                      <field name="extra_description" nolabel="1" colspan="8"/>
                  </group>
           </xpath>
        </field>
    </record>
  </data>
</openerp>

