<?xml version="1.0" ?>
<openerp>
<data>
    <record id='view_partner_add_fiam_fields' model='ir.ui.view'>
        <field name='name'>Fiam Partner</field>
        <field name='model'>res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name='type'>form</field>
        <field name='arch' type='xml'>
              <xpath expr="/form/notebook/page[@string='Notes']" position="inside">
                  <separator string="Fido" />
                  <group colspan="4" col="6">
                    <field name='fido_ko' />   
                    <field name='fido_date' />   
                    <field name='fido_total' />   
                  </group>
                  <separator string="Note gestionale" />
                  <field name='mexal_note' colspan="4" nolabel="1" />   
                  <newline />
                  <separator string="Extra info gestionale" />
                  <newline />
                  <field name="mexal_c" />
                  <field name="mexal_s" />
                  <newline />
                  <field name='discount_rates' />             
                  <field name='discount_value' />             
                  <newline />
                  <field name='type_id' />
                  <field name='zone_id' />
              </xpath>
              <xpath expr="/form/notebook/page[@string='Notes']" position="after">
                 <page string="Statistics" groups="base.group_system">
                     <separator string="Invoiced:" colspan="4" />
                     <field name="invoiced_current_year" readonly="1" />
                     <field name="invoiced_last_year" readonly="1" />
                     <field name="invoice_trend" readonly="1" />
                     <field name="invoice_trend_perc" readonly="1" />
                     <separator string="Orders:" colspan="4" />
                     <field name="order_current_year" readonly="1" />
                     <field name="order_last_year" readonly="1" />
                     <separator string="Last document:" colspan="4" />
                     <field name="date_last_ddt" readonly="1" widget="date" />
                     <field name="day_left_ddt" readonly="1" />
                 </page>
              </xpath>
        </field>
    </record>

   <!--BLOCCO: inherit res.partner:-->
   <record model="ir.ui.view" id="view_partner_form_inherit_mexal_id">
        <field name="name">Partner mexal</field>
        <field name="model">res.partner</field>
        <!--<field name="inherit_id" ref="base.view_partner_form"/>-->
        <field name="inherit_id" ref="base_contact.view_partner_form_inherit"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
                   <field name="email" position="after">
              <!--<xpath expr="/form/group/field[@name='email']" position="after">-->
                      <field name="mexal_c" />
                      <field name="mexal_s" />
              <!--</xpath>-->
                   </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_res_partner_tree_filter_mexal_id">
            <field name="name">Partner filter mexal</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="type">search</field>
            <field name="arch" type="xml">
                   <field name="name" position="after">
                          <field name="ref" />
                   </field>
                   <field name="user_id" position="after">
                          <field name='type_id' />                      
                          <field name='zone_id' widget="selection" />
                   </field>
            </field>
    </record>
    
   <record model="ir.ui.view" id="view_partner_tree_inherit_fields">
        <field name="name">Partner tree fields</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="type">tree</field>
        <field name="arch" type="xml">
               <field name="user_id" position="after">
                      <field name='type_id' />
                      <field name='zone_id' />
               </field>
        </field>
    </record>

    <!-- Oggetto: res.partner.zone -->
   <record model="ir.ui.view" id="view_res_partner_zone_form">
       <field name="name">res.partner.zone.form</field>
       <field name="model">res.partner.zone</field>
       <field name="type">form</field>
       <field name="arch" type="xml">
           <form string="Zone">
              <field name="name" />
              <field name="type" />
           </form>
       </field>
   </record> 
   <record model="ir.ui.view" id="view_res_partner_zone_tree">
       <field name="name">res.partner.zone.tree</field>
       <field name="model">res.partner.zone</field>
       <field name="type">tree</field>
       <field name="arch" type="xml">
           <form string="Zone">
              <field name="name" />
              <field name="type" />
           </form>
       </field>
   </record> 
   <record model="ir.actions.act_window" id="action_res_partner_zone_tree">
       <field name="name">Zone partner</field>
       <field name="res_model">res.partner.zone</field>
       <field name="view_type">form</field>
       <field name="view_mode">tree,form</field>
       <field name="view_id" ref="view_res_partner_zone_tree"/>
   </record>
   <menuitem parent="base.menu_config_address_book" id="menu_action_res_partner_zone_tree" action="action_res_partner_zone_tree"/>
</data>
</openerp>

